<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_witch"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/textCount"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:ems="1000"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical|center_horizontal"
        android:inputType="numberSigned"
        android:text="0"
        android:textSize="@dimen/textSizeCounter" />

    <Button
        android:id="@+id/buttonDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonUp"
        android:layout_alignBottom="@+id/buttonUp"
        android:layout_alignRight="@+id/textCount"
        android:text="▼" />

    <EditText
        android:id="@+id/textDescription"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textCount"
        android:ems="10"
        android:gravity="top|left"
        android:hint="Write anything"
        android:inputType="textMultiLine"
        android:scrollHorizontally="false"
        android:selectAllOnFocus="false" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonResetCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Reset Count" />

    <Button
        android:id="@+id/buttonResetMemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonResetCount"
        android:text="Reset Memo" />

    <Button
        android:id="@+id/buttonUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textDescription"
        android:layout_alignParentLeft="true"
        android:text="▲" />

    <TextView
        android:id="@+id/textDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/buttonDown"
        android:layout_below="@id/textCount"
        android:gravity="center_vertical|center_horizontal"
        android:text="2013.01.01 00:00:00"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>